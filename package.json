{
  "name": "nodeweaver",
  "version": "1.0.3",
  "private": true,
  "description": "NodeWeaver - Modern OSINT graph visualization tool for weaving connections between data nodes",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:web": "cd apps/web && npm run dev",
    "dev:api:clean": "node ./scripts/free-port.js 4000",
    "dev:api": "npm run dev:api:clean && cd apps/api && npm run dev",
    "dev:desktop": "cd apps/desktop && npm run dev",
    "dev:all": "concurrently -n \"API,WEB,DESKTOP\" -c \"bgBlue,bgGreen,bgMagenta\" \"npm run dev:api\" \"npm run dev:web\" \"npm run dev:desktop\"",
    "build": "npm run build:packages && npm run build:apps",
    "build:packages": "npm run build --workspaces --if-present --workspace=packages/*",
    "build:apps": "npm run build --workspaces --if-present --workspace=apps/*",
    "build:desktop": "cd apps/desktop && npm run package",
    "build:desktop:win": "cd apps/desktop && npm run package:win",
    "build:desktop:mac": "cd apps/desktop && npm run package:mac",
    "build:desktop:linux": "cd apps/desktop && npm run package:linux",
    "test": "npm run test --workspaces --if-present",
    "test:e2e": "cd apps/web && npm run test:e2e",
    "lint": "npm run lint --workspaces --if-present",
    "type-check": "npm run type-check --workspaces --if-present",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "setup": "npm install && npm run docker:up && npm run db:migrate",
    "setup:desktop": "cd apps/desktop && npm install",
    "db:migrate": "cd apps/api && npm run db:migrate",
    "db:seed": "cd apps/api && npm run db:seed",
    "validate:transform-ids": "node ./scripts/transform-id-check.js",
    "validate:alert-dispatch": "node ./scripts/alert-dispatch-guard.js"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
