{
  "name": "@nodeweaver/desktop",
  "version": "1.0.2",
  "private": true,
  "description": "NodeWeaver Desktop - OSINT Graph Visualization Application",
  "homepage": "https://nodeweaver-site.pages.dev",
  "author": {
    "name": "DEVLOCKER",
    "email": "support@nodeweaver.app"
  },
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc -p tsconfig.main.json && electron .",
    "dev:renderer": "cd ../web && npm run dev",
    "build": "npm run build:main && npm run build:renderer && npm run package",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "cd ../web && npm run build",
    "package": "electron-builder",
    "package:win": "electron-builder --win",
    "package:mac": "electron-builder --mac",
    "package:linux": "electron-builder --linux"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "electron-log": "^5.1.1",
    "electron-reload": "^2.0.0-alpha.1",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "node-pty": "^1.1.0"
  },
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "chokidar": "^3.5.3",
    "concurrently": "^8.2.2",
    "electron": "28.1.0",
    "electron-builder": "24.13.3",
    "typescript": "^5.3.3"
  },
  "build": {
    "appId": "com.nodeweaver.app",
    "productName": "NodeWeaver",
    "copyright": "Copyright Â© 2024 NodeWeaver",
    "directories": {
      "output": "release",
      "buildResources": "resources"
    },
    "files": [
      "dist/**/*",
      "renderer/**/*"
    ],
    "win": {
      "publisherName": "DEVLOCKER",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Development"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": {
      "provider": "github",
      "owner": "lupodelvita",
      "repo": "penis-mishu-i-moi"
    }
  }
}
