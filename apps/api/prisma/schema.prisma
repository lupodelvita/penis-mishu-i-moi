generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums
enum Role {
  USER
  ADMIN
}

enum LicenseTier {
  OBSERVER   // Free
  ANALYST    // Hobby/entry
  OPERATIVE  // Advanced
  DEVELOPER  // Tech
  ENTERPRISE // White-label
  CEO        // God mode
}

enum BotType {
  DISCORD
  TELEGRAM
}

enum ObservabilityScope {
  VIEW_DASHBOARDS
  VIEW_ERRORS
  MANAGE_ALERTS
  RECEIVE_TELEGRAM_ALERTS
  MANAGE_INTEGRATIONS
}

enum ObservabilityInviteStatus {
  PENDING
  ACCEPTED
  REVOKED
  EXPIRED
}

enum ObservabilityAuditAction {
  INVITE_CREATED
  INVITE_ACCEPTED
  INVITE_REVOKED
  ACCESS_GRANTED
  ACCESS_REVOKED
  TELEGRAM_CHAT_LINKED
  TELEGRAM_CHAT_UNLINKED
  SCOPES_UPDATED
}

// Models

model User {
  id           String   @id @default(uuid())
  username     String   @unique
  accountCode  String?  @unique
  passwordHash String
  role         Role     @default(USER)
  created      DateTime @default(now())
  
  // Relations
  license      License?
  ownedGraphs  Graph[]          @relation("GraphOwner")
  ledGraphs    Graph[]          @relation("GraphLeader")
  graphMembers GraphMember[]
  bots         BotConfig[]
  memories     AIMemory[]
  ownedTeams   Team[]           @relation("TeamOwner")
  teamMembers  TeamMember[]
  observabilityAccess         ObservabilityAccess?
  observabilityInvitesCreated ObservabilityInvite[]   @relation("ObservabilityInviteCreator")
  observabilityInvitesAccepted ObservabilityInvite[]  @relation("ObservabilityInviteAcceptor")
  observabilityAccessGrants   ObservabilityAccess[]   @relation("ObservabilityAccessGranter")
  observabilityAuditActor     ObservabilityAuditLog[] @relation("ObservabilityAuditActor")
  observabilityAuditSubject   ObservabilityAuditLog[] @relation("ObservabilityAuditSubject")
}

model License {
  id         String      @id @default(uuid())
  key        String      @unique
  tier       LicenseTier
  isActive   Boolean     @default(true)
  expiresAt  DateTime?
  created    DateTime    @default(now())
  
  // Relations
  userId     String?     @unique
  user       User?       @relation(fields: [userId], references: [id])
}

model BotConfig {
  id         String   @id @default(uuid())
  name       String
  type       BotType
  token      String // Encrypted in logic, stored as string here
  isActive   Boolean  @default(true)
  autoStart  Boolean  @default(false)
  settings   Json?    @default("{}") // Channels, etc
  created    DateTime @default(now())
  
  // Relations
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum GraphMemberRole {
  LEADER
  MEMBER
}

model Graph {
  id          String   @id @default(uuid())
  name        String
  description String?
  created     DateTime @default(now())
  updated     DateTime @updatedAt
  
  // Ownership & Leadership
  ownerId     String   // User who created the graph
  owner       User     @relation("GraphOwner", fields: [ownerId], references: [id])
  leaderId    String?  // Current leader (can be different from owner)
  leader      User?    @relation("GraphLeader", fields: [leaderId], references: [id])
  
  // Relations
  entities    Entity[]
  links       Link[]
  commands    GraphCommand[]
  members     GraphMember[]
}

model GraphMember {
  id        String            @id @default(uuid())
  graphId   String
  graph     Graph             @relation(fields: [graphId], references: [id], onDelete: Cascade)
  userId    String
  user      User              @relation(fields: [userId], references: [id])
  role      GraphMemberRole   @default(MEMBER)
  joinedAt  DateTime          @default(now())
  
  @@unique([graphId, userId])
}

model Entity {
  id          String   @id @default(uuid())
  graphId     String
  type        String
  value       String
  properties  Json     @default("{}")
  metadata    Json     @default("{}")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Entity Notes/Comments
  note        String?
  noteColor   String?  @default("#FFEB3B")
  noteAuthor  String?
  noteDate    DateTime?
  
  graph       Graph    @relation(fields: [graphId], references: [id], onDelete: Cascade)
  linksFrom   Link[]   @relation("SourceLink")
  linksTo     Link[]   @relation("TargetLink")
}

model Link {
  id        String   @id @default(uuid())
  graphId   String
  sourceId  String
  targetId  String
  label     String?
  created   DateTime @default(now())
  
  graph     Graph    @relation(fields: [graphId], references: [id], onDelete: Cascade)
  source    Entity   @relation("SourceLink", fields: [sourceId], references: [id], onDelete: Cascade)
  target    Entity   @relation("TargetLink", fields: [targetId], references: [id], onDelete: Cascade)
}

model Team {
  id          String       @id @default(uuid())
  name        String
  description String?
  avatar      String?
  ownerId     String
  owner       User         @relation("TeamOwner", fields: [ownerId], references: [id])
  members     TeamMember[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model TeamMember {
  id        String   @id @default(uuid())
  teamId    String
  team      Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  role      TeamRole @default(MEMBER)
  joinedAt  DateTime @default(now())
  
  @@unique([teamId, userId])
}

enum TeamRole {
  OWNER
  ADMIN
  MEMBER
  VIEWER
}

model AIMemory {
  id        String   @id @default(uuid())
  prompt    String
  response  String
  rating    String   @default("good")
  timestamp DateTime @default(now())
  
  // Relations
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
}

model GraphCommand {
  id        String   @id @default(cuid())
  graphId   String
  type      String   // add_entity, delete_entity, transform, chat, etc
  payload   Json
  userId    String
  userName  String
  timestamp DateTime @default(now())
  
  // Relations
  graph     Graph    @relation(fields: [graphId], references: [id], onDelete: Cascade)
  
  @@index([graphId])
  @@index([timestamp])
}

model ObservabilityInvite {
  id             String                    @id @default(uuid())
  tokenHash      String                    @unique
  status         ObservabilityInviteStatus @default(PENDING)
  invitedUserId  String?
  invitedUser    User?                     @relation("ObservabilityInviteAcceptor", fields: [invitedUserId], references: [id], onDelete: SetNull)
  invitedUsername String?
  invitedById    String
  invitedBy      User                      @relation("ObservabilityInviteCreator", fields: [invitedById], references: [id], onDelete: Cascade)
  scopes         ObservabilityScope[]
  expiresAt      DateTime
  acceptedAt     DateTime?
  revokedAt      DateTime?
  createdAt      DateTime                  @default(now())
  updatedAt      DateTime                  @updatedAt

  access         ObservabilityAccess?
  auditLogs      ObservabilityAuditLog[]

  @@index([status])
  @@index([invitedUserId])
  @@index([expiresAt])
}

model ObservabilityAccess {
  id             String               @id @default(uuid())
  userId         String               @unique
  user           User                 @relation(fields: [userId], references: [id], onDelete: Cascade)
  grantedById    String
  grantedBy      User                 @relation("ObservabilityAccessGranter", fields: [grantedById], references: [id], onDelete: Cascade)
  inviteId       String?              @unique
  invite         ObservabilityInvite? @relation(fields: [inviteId], references: [id], onDelete: SetNull)
  scopes         ObservabilityScope[]
  telegramChatId String?
  isActive       Boolean              @default(true)
  expiresAt      DateTime?
  createdAt      DateTime             @default(now())
  updatedAt      DateTime             @updatedAt

  auditLogs      ObservabilityAuditLog[]

  @@index([isActive])
  @@index([telegramChatId])
  @@index([expiresAt])
}

model ObservabilityAuditLog {
  id            String                  @id @default(uuid())
  action        ObservabilityAuditAction
  actorUserId   String?
  actorUser     User?                   @relation("ObservabilityAuditActor", fields: [actorUserId], references: [id], onDelete: SetNull)
  subjectUserId String?
  subjectUser   User?                   @relation("ObservabilityAuditSubject", fields: [subjectUserId], references: [id], onDelete: SetNull)
  accessId      String?
  access        ObservabilityAccess?    @relation(fields: [accessId], references: [id], onDelete: SetNull)
  inviteId      String?
  invite        ObservabilityInvite?    @relation(fields: [inviteId], references: [id], onDelete: SetNull)
  details       Json?
  createdAt     DateTime                @default(now())

  @@index([action])
  @@index([createdAt])
  @@index([actorUserId])
  @@index([subjectUserId])
}
