# =============================================================================
# NodeWeaver — единый .env.example для всего монорепо
# Скопируй в .env и заполни своими значениями:
#   cp .env.example .env
# =============================================================================

# ── База данных ───────────────────────────────────────────────────────────────
DATABASE_URL="postgresql://nodeweaver:nodeweaver_dev_password@localhost:5432/nodeweaver_db?schema=public"

# ── API сервер ────────────────────────────────────────────────────────────────
PORT=4000
NODE_ENV=development

# ── Безопасность ──────────────────────────────────────────────────────────────
JWT_SECRET="change-this-secret-min-32-chars-long"
ENCRYPTION_KEY="change-this-key-exactly-32-chars!"

# ── Discord ───────────────────────────────────────────────────────────────────
DISCORD_BOT_TOKEN=""
DISCORD_CHANNEL_ID=""

# ── Open WebUI / Local AI ─────────────────────────────────────────────────────
OPEN_WEBUI_URL="http://localhost:8181"
OPEN_WEBUI_MODEL="deepseek-r1:latest"
OPEN_WEBUI_API_KEY=""

# ── Telegram Bot API ──────────────────────────────────────────────────────────
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here
TELEGRAM_LOCAL_SERVER=http://localhost:8081
TELEGRAM_PROXY=

